{
    "plugins": [
        "stylelint-scss",
        "stylelint-order",
    ],
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": [
            4,  { "severity": "error" }
        ],
        "order/properties-alphabetical-order": true,
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
    }
}
