{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["google", "standard-preact"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 120],
        "react/jsx-indent": ["error", 4],
        "require-jsdoc": "off"
    }
}
